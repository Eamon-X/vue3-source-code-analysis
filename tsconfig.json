{
  "compilerOptions": {
    "outDir": "dist", // 输出的目录
    "sourceMap": true, // 采用 sourceMap
    "target": "ES2016", // 目标语法
    "module": "ESNext", // 模板格式
    "moduleResolution": "node", // 模块解析方式
    "strict": false, // 严格模式
    "resolveJsonModule": true, // 解析json模块
    "esModuleInterop": true, // 允许通过es6语法引入commonjs模块
    "jsx": "preserve", // jsx不转义
    "lib": ["ESNext", "DOM"], // 支持的类库
    "baseUrl": ".", // 以当前目录（根目录）来解析路径
    "paths": {
      // 路径映射
      "@vue/*": ["packages/*/src"]
    }
  }
}
